<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <!--<stroke android:width="1dip" android:color="@color/colorAccent" />-->
            <gradient android:angle="-90" android:endColor="@color/custom_dialog_button_background_color" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <stroke android:width="1dip" android:color="@color/custom_dialog_button_background_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <!--<stroke android:width="1dp" android:color="@color/colorAccent" />-->
            <gradient android:angle="-90" android:endColor="@color/custom_dialog_button_background_color" android:startColor="@color/custom_dialog_button_background_color" />
        </shape>
    </item>

</selector>