<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <com.mynameismidori.currencypicker.CurrencyPreference
        android:defaultValue="@string/default_currency"
        android:entries="@array/empty_array"
        android:entryValues="@array/empty_array"
        android:key="selectedCurrency"
        android:summary="Select your dafault currency"
        android:title="Default Currency" />
    <com.mynameismidori.currencypicker.MultiCurrencyPreference
        android:defaultValue="@array/selectedCurrencies"
        android:entries="@array/empty_array"
        android:entryValues="@array/empty_array"
        android:key="selectedCurrencies"
        android:summary="Choose currency which you want to show on your store."
        android:title="@string/selected_currencies" />
</PreferenceScreen>